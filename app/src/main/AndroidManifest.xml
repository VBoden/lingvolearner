<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.boden.lingvolearner"
    android:requestLegacyExternalStorage="true"
    android:versionCode="3"
    android:versionName="2.4">
    <queries>
        <intent>
            <action android:name="android.intent.action.TTS_SERVICE"/>
        </intent>
    </queries>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">


        <activity
            android:name="com.boden.lingvolearner.MainFormActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.boden.lingvolearner.OptionActivity"
            android:exported="true"
            android:label="@string/app_name"></activity>
        <activity
            android:name="com.boden.lingvolearner.HelpActivity"
            android:exported="true"
            android:label="@string/app_name"></activity>
        <activity
            android:name="com.boden.lingvolearner.SelectDbDictionaryActivity"
            android:exported="true"
            android:label="@string/title_activity_load_from_db"></activity>
        <activity
            android:name="com.boden.lingvolearner.PlayerActivity"
            android:exported="true"
            android:label="@string/title_activity_player"></activity>
        <activity
            android:name="com.boden.lingvolearner.LastOpendActivity"
            android:exported="true"
            android:label="@string/title_activity_last_opend"></activity>
        <activity
            android:name="com.boden.lingvolearner.SelectDirActivity"
            android:exported="true"
            android:label="@string/title_activity_select_dir"></activity>
        <activity
            android:name="com.boden.lingvolearner.SelectNewPathActivity"
            android:exported="true"
            android:label="@string/title_activity_select_new_path"></activity>
    </application>

</manifest>
